import Arrow from '../components/Arrow.svelte'

const cards = [
	{ title: "3D Printer", body: "yay" ,href: "", thumbnail : "/images/toto.png",
		techno: [
			{"img" : "/images/profile.png"},
			{"img" : "/images/profile.png"}
		]
	},
	{ title: "3D Printer", body: "yay" ,href: "", thumbnail : "/images/toto.png",
		techno: [
